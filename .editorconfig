# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,class,cpp,cs,go,h,json,kt,m,mm,php,py,rs,swift}]
indent_size = 4

[*.{css,htm,html,js,lua,rb,sass,scss,sh,sql,ts,xaml,xml,yml,yaml}]
indent_size = 2
